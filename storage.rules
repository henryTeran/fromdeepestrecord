rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read access for releases, artists, labels, merch images
    match /releases/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /artists/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /labels/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /merch/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Fallback for other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}